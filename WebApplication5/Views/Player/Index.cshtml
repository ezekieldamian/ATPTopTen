@model IQueryable<WebApplication5.Models.Player>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var player in Model)
{
    string positionClass;

    switch (player.Rank)
    {
        case 1:
            positionClass = "gold";
            break;
        case 2:
            positionClass = "silver";
            break;
        case 3:
            positionClass = "bronze";
            break;
        default:
            positionClass = null;
            break;
    }
    var playerName = @player.FirstName + " " + @player.LastName;
    <h2 class="@positionClass">@player.Rank. @Html.ActionLink(playerName, "ByRank", "Player", new { position = player.Rank }, null)</h2>
}
